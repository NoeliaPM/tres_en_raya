<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacuaa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/red"
            android:text="Introduce datos:"
            android:textAlignment="center"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20sp">

        <TextView
            android:id="@+id/textViewNombre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre :" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Humano" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="216dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20sp">

        <TextView
            android:id="@+id/textViewEdad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edad: " />

        <EditText
            android:id="@+id/editTextedadCPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Introduce tu edad"
            android:inputType="textPersonName" />

    </LinearLayout>

</LinearLayout>