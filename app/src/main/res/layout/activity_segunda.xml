<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacuaa"
    android:orientation="vertical"
    tools:context=".segundaAct">

    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/elige"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="@font/aqua"
            android:gravity="center"
            android:text="Elige un modo de juego:"
            android:textColor="#000000"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="583dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonrosa"
            style="@style/casilla"
            android:layout_width="73dp"
            android:layout_height="164dp"
            android:layout_weight="3"
            android:background="@drawable/boton1"
            android:fontFamily="@font/aqua"
            android:text="VS. JUGADOR"
            android:textSize="30dp" />

        <Button
            android:id="@+id/botonverde"
            style="@style/casilla"
            android:layout_width="73dp"
            android:layout_height="164dp"
            android:layout_weight="3"
            android:background="@drawable/boton2"
            android:fontFamily="@font/aqua"
            android:text="VS. CPU"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonJugar"
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:layout_weight="1"
            android:background="@drawable/brocha300"
            android:enabled="false"
            android:fontFamily="@font/aqua"
            android:text="JUGAR"
            android:textSize="50dp" />
    </LinearLayout>
</LinearLayout>


